<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="12dp"
        android:foreground="?selectableItemBackground"
        android:clickable="true">

    <RelativeLayout
        android:id="@+id/sholatLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/videoSholat"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="16dp"/>

        <ImageView
            android:id="@+id/imageSholat"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/videoSholat"
            android:layout_below="@+id/titleSholat"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/titleSholat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/videoSholat"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/detailSholat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/titleSholat"
            android:layout_toRightOf="@+id/imageSholat" />

    </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>